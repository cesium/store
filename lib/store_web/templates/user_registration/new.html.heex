<div class="mx-auto flex h-screen w-full max-w-md flex-col justify-center">
  <div>
    <img
      class="mx-auto h-16 w-auto rounded-lg"
      src={Routes.static_path(@conn, "/images/logos/logo_lettering.svg")}
    />
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      <%= gettext("Create a new account") %>
    </h2>
  </div>

  <.form
    class="mx-8 mt-8 space-y-6 sm:mx-0"
    ,
    let={f}
    for={@changeset}
    action={Routes.user_registration_path(@conn, :create)}
  >
    <%= if @changeset.action do %>
      <div class="alert alert-danger">
        <p>Oops, something went wrong! Please check the errors below.</p>
      </div>
    <% end %>
    <div class="-space-y-px rounded-md shadow-sm">
      <div>
        <%= label(f, :email, class: "sr-only") %>
        <%= email_input(f, :email,
          required: true,
          placeholder: gettext("Email address"),
          class: "relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:ring-primary-light focus:border-primary-light focus:z-10 focus:outline-none sm:text-sm"
        ) %>
      </div>
      <div>
        <%= label(f, :password, class: "sr-only") %>
        <%= password_input(f, :password,
          required: true,
          placeholder: gettext("Password"),
          autocomplete: "current-password",
          class: "relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:ring-primary-light focus:border-primary-light focus:z-10 focus:outline-none sm:text-sm"
        ) %>
      </div>
    </div>

    <div class="flex flex-col space-y-2 sm:flex-row sm:items-center sm:justify-between sm:space-y-0">
      <div class="flex items-center">
        <%= checkbox(f, :remember_me,
          class: "text-primary-light h-4 w-4 border-gray-300 focus:ring-[#f47c58]"
        ) %>
        <%= label(f, :remember_me, gettext("Remember me"),
          class: "ml-2 block text-sm text-gray-900"
        ) %>
      </div>

      <div class="text-sm">
        <%= link(gettext("Forgot your password?"),
          to: Routes.user_reset_password_path(@conn, :new),
          class: "text-primary-light font-medium focus:ring-primary-light focus:outline-none focus:ring-2 focus:ring-offset-2"
        ) %>
      </div>
    </div>

    <div>
      <%= submit class: "group relative flex w-full justify-center border border-transparent bg-black px-4 py-2 text-sm font-bold text-white hover:bg-primary-light focus:ring-primary-light focus:outline-none focus:ring-2 focus:ring-offset-2" do %>
        <span class="absolute inset-y-0 left-0 flex items-center pl-3">
          <Heroicons.Solid.lock_closed class="h-5 w-5 text-white opacity-10 group-hover:text-black" />
        </span>
        <%= gettext("Register") %>
      <% end %>
    </div>

    <div class="text-sm">
      Already have an account? <%= link(gettext("Login Now"),
        to: Routes.user_session_path(@conn, :new),
        class: "text-primary-light font-medium focus:ring-primary-light focus:outline-none focus:ring-2 focus:ring-offset-2"
      ) %>
    </div>
  </.form>
</div>
